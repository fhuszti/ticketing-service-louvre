{% extends "layout.html.twig" %}
{% set homepage = true %}

{% block title %}
  	{{ 'core.home.header.title'|trans }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite, ?scssphp'
        'bundles/app/css/home.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block body %}
	{{ include('templates/flash.html.twig') }}

    {{ include('core/blocks/index/cover.html.twig') }}

    {{ include('core/blocks/index/opening.html.twig') }}

    {{ include('core/blocks/index/prices.html.twig') }}

    {{ include('core/blocks/index/contact.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?jsqueeze'
        'bundles/app/js/home.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
