<!DOCTYPE html>
<html  lang="{{ app.request.locale|split('_')[0] }}">
	<head>
	  	<meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1">

	  	<title>
	  		{% block title %}
	  			{{ 'ots_core.site.title'|trans }}
	  		{% endblock %}
	  	</title>

	  	{% block stylesheets %}
		  	{% stylesheets filter='cssrewrite'
		  		'//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
		  		'//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css'
		  		'../vendor/components/font-awesome/css/font-awesome.min.css'
		  		'bundles/otscore/css/main.css'
		  		'bundles/otscore/css/header.css'
		  		'bundles/otscore/css/footer.css' %}
		  		<link rel="stylesheet" href="{{ asset_url }}" type="text/css">
		  	{% endstylesheets %}
	  	{% endblock %}
	</head>

	<body{% if homepage is defined %} data-spy="scroll" data-target=".navbar" data-offset="300"{% endif %}>
	  	<div class="container-fluid">
		    <header class="navbar navbar-default navbar-fixed-top" id="header">
		      	<div class="container">
		      		<div class="navbar-header">
                    	<a href="{{ path('ots_core_home') }}" title="{{ 'ots_core.header.title.link_title'|trans }}" class="navbar-brand">
                        	{% image 'http://assets.fhuszti.com/louvre/logo.png' %}
    							<img src="{{ asset_url }}" alt="{{ 'ots_core.header.title.img_alt'|trans }}" />
							{% endimage %}
						</a>

                    	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        	<span class="icon-bar"></span>
                        	<span class="icon-bar"></span>
                        	<span class="icon-bar"></span>
                    	</button>
                	</div>

                	<div class="collapse navbar-collapse">
	                	<div id="lang-menu" class="navbar-text">
						  	<a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">
						  		EN</a>
						  <!-- </a> tag has to stay close to EN, otherwise it creates a random space after EN, highlighted when it's underlined on hover -->
						  	<a href="{{  path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'}))}}">
						  		FR
						  	</a>
						</div>

	                    <nav role="navigation">
	                        <!-- actual menu list -->
	                        <ul class="nav navbar-nav navbar-right">
	                            <li>
	                                <a href="{% if homepage is defined %}#cover{% else %}{{ path('ots_core_home') }}{% endif %}" title="{{ 'ots_core.header.menu.home.title'|trans }}" class="scrollspy-link">
	                                    {{ 'ots_core.header.menu.home.content'|trans }}
	                                </a>
	                            </li>
	                            <li>
	                                <a href="{% if homepage is not defined %}{{ path('ots_core_home') }}{% endif %}#opening-time" title="{{ 'ots_core.header.menu.opening.title'|trans }}" class="scrollspy-link">
	                                    {{ 'ots_core.header.menu.opening.content'|trans }}
	                                </a>
	                            </li>
	                            <li>
	                                <a href="{% if homepage is not defined %}{{ path('ots_core_home') }}{% endif %}#prices" title="{{ 'ots_core.header.menu.prices.title'|trans }}" class="scrollspy-link">
	                                    {{ 'ots_core.header.menu.prices.content'|trans }}
	                                </a>
	                            </li>
	                            <li>
	                                <a href="{% if homepage is not defined %}{{ path('ots_core_home') }}{% endif %}#contact" title="{{ 'ots_core.header.menu.contact.title'|trans }}" class="scrollspy-link">
	                                    {{ 'ots_core.header.menu.contact.content'|trans }}
	                                </a>
	                            </li>
	                            <li>
	                                <a href="{{ path('ots_billing_home') }}" title="{{ 'ots_core.header.menu.book.title'|trans }}">
	                                    {{ 'ots_core.header.menu.book.content'|trans }}
	                                </a>
	                            </li>
	                        </ul>
	                    </nav>
	                </div>
		      	</div>
		    </header>

		    <div id="wrapper">
			    {% block body %}
			    {% endblock %}
		    </div>

		    <footer class="row" id="footer">
		      	<div class="col-xs-12 col-sm-4">
		      		<a href="{{ path('ots_core_legal') }}" title="{{ 'ots_core.footer.legal.title'|trans }}">
		      			{{ 'ots_core.footer.legal.content'|trans }}
		      		</a>
		      	</div>
		      	<div class="col-xs-12 col-sm-4">
		      		{{ 'ots_core.footer.copyright'|trans|raw }}
		      	</div>
		      	<div class="col-xs-12 col-sm-4">
		      		<a href="{{ path('ots_core_terms') }}" title="{{ 'ots_core.footer.terms.title'|trans|raw }}">
		      			{{ 'ots_core.footer.terms.content'|trans|raw }}
		      		</a>
		      	</div>
		    </footer>
	  	</div>

	  	{% block javascripts %}
	  		{% javascripts
		  		'//code.jquery.com/jquery-3.2.1.min.js'
		  		'//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
		  		'//code.jquery.com/ui/1.12.1/jquery-ui.js' %}
		  		<script type="text/javascript" src="{{ asset_url }}"></script>
		  	{% endjavascripts %}
	  	{% endblock %}
	</body>
</html>
