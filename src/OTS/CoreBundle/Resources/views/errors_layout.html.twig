{% extends "OTSCoreBundle::layout.html.twig" %}

{% block title %}
    {{ status_code }} {{ status_text }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
        'bundles/otscore/css/default-page.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1 id="title">{{ 'ots_core.errors.layout.title'|trans }}</h1>
    <hr />

    <h3>{{ 'ots_core.errors.layout.subtitle'|trans }} "{{ status_code }} {{ status_text }}".</h3>

    <p>
        {% block content %}
        {% endblock %}
    </p>
{% endblock %}
